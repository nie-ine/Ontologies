@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix owl: <http://www.w3.org/2002/07/owl#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix skos: <http://www.w3.org/2004/02/skos/core#>.
@prefix log: <http://www.w3.org/2000/10/swap/log#>.
@prefix dct: <http://purl.org/dc/terms/>.
@prefix cidoc: <http://www.cidoc-crm.org/cidoc-crm/>.
@prefix cidoc-inf: <http://www.ics.forth.gr/isl/CRMinf/>.
@prefix frbroo: <http://iflastandards.info/ns/fr/frbr/frbroo/>.
@prefix concept: <http://e-editiones.ch/ontology/concept#>.
@prefix text-structure: <http://e-editiones.ch/ontology/text-structure#>.
@prefix ling: <http://e-editiones.ch/ontology/linguistics#>.

@base <http://e-editiones.ch/ontology/logic>.
@prefix logic: <http://e-editiones.ch/ontology/logic#>.

<http://e-editiones.ch/ontology/logic>
	a owl:Ontology;
	dct:license <http://creativecommons.org/licenses/by/3.0/>;
	dct:title "An ontology about logic"@en;
	dct:description """Formal description of logic, general subclasses, related classes and properties."""@en;
	dct:creator "Hans Cools, MD, knowledge engineer, ontologist, software developer, University of Basel, Switzerland"@en;
	dct:publisher "Universities of Basel, Bern, and Zürich, Switzerland"@en;
	owl:versionInfo "2020-06-11"^^xsd:date.

#
# CLASSES
#

logic:Premise
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class;
	rdfs:label "premise"@en, "Prämisse"@de;
	rdfs:comment """Statement ... ."""@en;
	rdfs:subClassOf ling:Statement.

logic:Conclusion
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class;
	rdfs:label "conclusion"@en, "Schlussfolgerung"@de;
	rdfs:comment """Statement ... ."""@en;
	rdfs:subClassOf ling:Statement.

logic:Argument
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class;
	rdfs:label "argument"@en, "Argument"@de;
	rdfs:comment """Premise(s) presenting a reason for accepting a conclusion."""@en;
	rdfs:subClassOf text-structure:Paragraph.

logic:Syllogism
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class;
	rdfs:label "syllogism"@en, "Syllogismus"@de;
	rdfs:comment """."""@en;
	rdfs:subClassOf logic:Argument.

logic:BeliefValue
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class;
	rdfs:label "belief value"@en, "Glaubenswert"@de;
	rdfs:comment """Value of a belief in a proposition by a certain agent in a certain time."""@en;
	skos:note """Experimental."""@en;
	rdfs:subClassOf cidoc-inf:I2_Belief;
	owl:oneOf (logic:certain logic:veryLikely logic:likely logic:lessLikely logic:neutral logic:lessUnlikely logic:unlikely logic:veryUnlikely logic:impossible).

logic:certain
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class, logic:BeliefValue;
	rdfs:label "certain"@en, "sicher"@de;
	rdfs:comment """Belief value being 'true'."""@en;
	skos:note """Experimental."""@en.

logic:veryLikely
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class, logic:BeliefValue;
	rdfs:label "very likely"@en, "sehr warscheinlich"@de;
	rdfs:comment """Belief value representing a high probability of being true."""@en;
	skos:note """Experimental."""@en.

logic:likely
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class, logic:BeliefValue;
	rdfs:label "likely"@en, "warscheinlich"@de;
	rdfs:comment """Belief value representing a moderate probability of being true."""@en;
	skos:note """Experimental."""@en.

logic:lessLikely
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class, logic:BeliefValue;
	rdfs:label "less likely"@en, "wenig warscheinlich"@de;
	rdfs:comment """Belief value representing a low probability of being true."""@en;
	skos:note """Experimental."""@en.

logic:neutral
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class, logic:BeliefValue;
	rdfs:label "neutral"@en, "neutral"@de;
	rdfs:comment """Belief value representing a neutral probability of being true or false."""@en;
	skos:note """Experimental."""@en.

logic:lessUnlikely
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class, logic:BeliefValue;
	rdfs:label "less unlikely"@en, "wenig unwarscheinlich"@de;
	rdfs:comment """Belief value representing a low probability of being false."""@en;
	skos:note """Experimental."""@en.

logic:unlikely
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class, logic:BeliefValue;
	rdfs:label "unlikely"@en, "unwarscheinlich"@de;
	rdfs:comment """Belief value representing a moderate probability of being false."""@en;
	skos:note """Experimental."""@en.

logic:veryUnlikely
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class, logic:BeliefValue;
	rdfs:label "very unlikely"@en, "sehr unwarscheinlich"@de;
	rdfs:comment """Belief value representing a high probability of being false."""@en;
	skos:note """Experimental."""@en.

logic:impossible
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a rdfs:Class;
	rdfs:label "impossible"@en, "unmöglich"@de;
	rdfs:comment """Belief value being 'false'."""@en;
	skos:note """Experimental."""@en.

#
# PROPERTIES
#

logic:isPremiseOfArgument
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a owl:ObjectProperty;
	rdfs:label "is premise of argument"@en, "ist Prämisse eines Arguments"@de;
	rdfs:comment """Relating a premise to an argument it is part of."""@en;
	rdfs:domain logic:Premise;
	rdfs:range logic:Argument;
	rdfs:subPropertyOf text-structure:isSentenceOfParagraph.

logic:isConclusionOfArgument
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a owl:ObjectProperty;
	rdfs:label "is conclusion of argument"@en, "ist Schlussfolgerung eines Arguments"@de;
	rdfs:comment """Relating a conclusion to an argument it is part of."""@en;
	rdfs:domain logic:Conclusion;
	rdfs:range logic:Argument;
	rdfs:subPropertyOf text-structure:isSentenceOfParagraph.

logic:hasBeliefValue
	rdfs:isDefinedBy <http://e-editiones.ch/ontology/logic#>;
	a owl:ObjectProperty;
	rdfs:label "has belief value"@en, "hat Glaubenswert"@de;
	rdfs:comment """Relating a statement to its belief value in a certain space-time."""@en;
	skos:note """The statement can be reified or—exclusive—expressed as a formula."""@en;
	skos:note """Experimental."""@en;
	rdfs:domain [rdfs:subClassOf concept:PropositionalEntity, [owl:disjointUnionOf (rdf:Statement log:Formula)]];
	rdfs:range logic:BeliefValue.